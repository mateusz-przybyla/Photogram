{% extends 'base.html.twig' %}

{% block title %}
	Photogram - Add Comment
{% endblock %}

{% block bread %}
	→
	<a href="{{ path('app_post_show', {post: post.id}) }}">Post</a>
	→ Comment
{% endblock %}

{% block body %}
	<div class="w-full max-w-xl mx-auto">
		{{ include('post/_post.html.twig', {post: post}) }}

		{{ form_start(form) }}
		<div class="text-red-700 text-sm mt-1 mb-5">{{ form_errors(form)}}</div>
		<div class="mt-3">
			{{ form_label(form.text, 'Please enter the comment', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
			{{ form_widget(form.text, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
			<div class="text-red-700 text-sm my-1">
				{{ form_errors(form.text) }}
			</div>
		</div>
		<div>
			<button type="submit" class="block w-full shadow-sm border-transparent font-medium text-black bg-yellow-400 hover:bg-violet-600 hover:text-white active:bg-violet-800 rounded-md border p-2 mt-4 mb-2">Add Comment</button>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
