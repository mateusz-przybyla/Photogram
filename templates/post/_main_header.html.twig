<div class="w-full flex flex-col lg:flex-row items-center justify-center lg:justify-between pb-8 gap-4 lg:gap-0">
	<div class="lg:w-1/2 xl:w-1/3 flex items-center">
		<a href="{{ path('app_profile', { id: user.id }) }}" class="text-left">
			{{ include('shared/_avatar.html.twig', { profile: user.userProfile, size: 20 }) }}
		</a>
		<div class="ml-3 text-left">
			{% if user.userProfile != null %}
				<a href="{{ path('app_profile', { id: user.id }) }}" class="text-lg mb-1">{{ user.userProfile.photogramUsername ? user.userProfile.photogramUsername : user.email }}</a>
				<div class="text-base text-gray-500 dark:text-gray-400 font-normal">{{ user.userProfile.name ? user.userProfile.name : null }}</div>
			{% else %}
				<a href="{{ path('app_profile', { id: user.id }) }}" class="text-lg mb-1">{{ user.email }}</a>
			{% endif %}
		</div>
	</div>
	<div class="lg:w-1/2 xl:w-1/3">
		{{ include('post/_main_tabs.html.twig') }}
	</div>
	<div class="xl:w-1/3"></div>
</div>
